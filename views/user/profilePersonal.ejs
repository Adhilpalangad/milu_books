<%- include("partials/profileHeader.ejs",{ currentUrl: currentUrl }) %>

    <div id="profile" class="bg-white rounded-lg shadow-md p-6">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-semibold">Personal Details</h1>
            <div class="mt-4">
                <button 
                    id="edit-btn" 
                    type="button" 
                    class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
                >
                    Edit
                </button>
            </div>
            
        </div>
    
        <form id="profile-form" action="/profile/update" method="POST">
            <div class="space-y-4">
                <div class="flex">
                    <span class="w-1/3 text-gray-600">Full name:</span>
                    <span class="w-2/3" id="name-display"><%= name %></span>
                    <input 
                        type="text" 
                        name="name" 
                        value="<%= name %>" 
                        id="name-input" 
                        class="hidden w-2/3 border border-gray-300 rounded-md"
                    />
                </div>
    
                <!-- Referral Code Field (replaces phone number) -->


                
    
                <div class="flex">
                    <span class="w-1/3 text-gray-600">Email address:</span>
                    <span class="w-2/3" id="email-display"><%= email %></span>
                    <!-- Email cannot be edited -->
                </div>
    
                <div class="flex">
                    <span class="w-1/3 text-gray-600">Gender:</span>
                    <span class="w-2/3" id="gender-display"><%= gender %></span> <!-- Display saved gender -->
                    <div id="gender-inputs" class="hidden w-2/3">
                        <label class="inline-flex items-center">
                            <input type="radio" name="gender" value="male" id="gender-male" <% if (gender === 'male') { %> checked <% } %> />
                            <span>Male</span>
                        </label>
                        <label class="inline-flex items-center ml-4">
                            <input type="radio" name="gender" value="female" id="gender-female" <% if (gender === 'female') { %> checked <% } %> />
                            <span>Female</span>
                        </label>
                        <label class="inline-flex items-center ml-4">
                            <input type="radio" name="gender" value="other" id="gender-other" <% if (gender === 'other') { %> checked <% } %> />
                            <span>Other</span>
                        </label>
                    </div>
                </div>
            </div>
    
            <div class="mt-4">
                <button 
                    id="save-btn" 
                    type="submit" 
                    class="hidden bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
                >
                    Save
                </button>
            </div>
        </form>
    </div>
    <script>
        document.getElementById('edit-btn').addEventListener('click', function(event) {
    event.preventDefault(); // Prevent the default button action

    // Toggle visibility of display elements and input fields
    document.getElementById('name-display').classList.add('hidden');
    document.getElementById('name-input').classList.remove('hidden');

    document.getElementById('referral-code-display').classList.add('hidden');
    document.getElementById('referral-code-input').classList.remove('hidden');

    document.getElementById('gender-display').classList.add('hidden');
    document.getElementById('gender-inputs').classList.remove('hidden');

    // Show the save button
    document.getElementById('save-btn').classList.remove('hidden');

    // Hide the edit button
    document.getElementById('edit-btn').classList.add('hidden');
});

    </script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const urlParams = new URLSearchParams(window.location.search);
        
        if (urlParams.get('credited') === 'true') {
            Swal.fire({
                title: 'Congratulations!',
                text: '50 has been credited to your wallet as a referral bonus!',
                icon: 'success',
                confirmButtonText: 'OK'
            });
        } else if (urlParams.get('invalidCode') === 'true') {
            Swal.fire({
                title: 'Invalid Referral Code',
                text: 'The referral code you entered is invalid. Please try again.',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        } else if (urlParams.get('alreadyApplied') === 'true') {
            Swal.fire({
                title: 'Referral Code Already Applied',
                text: 'You have already applied this referral code.',
                icon: 'warning',
                confirmButtonText: 'OK'
            });
        }
    });
</script>

    
