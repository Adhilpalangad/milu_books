
<%- include("partials/header.ejs") %>


    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            background-color: #f5f6fa;
            padding: 0px;
        }

        .wallet-container {
            max-width: 1200px;
            margin-top: 100px;
            margin-left: 230px;
        }

        .cards-container {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }

        .card {
            flex: 1;
            min-width: 300px;
            background: linear-gradient(135deg, var(--bg-start), var(--bg-end));
            padding: 20px;
            border-radius: 15px;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .card::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="200" height="200" viewBox="0 0 200 200"><path d="M0 0C50 25 150 25 200 0C150 75 50 75 0 0" fill="rgba(255,255,255,0.1)" /></svg>') repeat;
            opacity: 0.1;
        }

        .purple-card {
            --bg-start: #9446e0;
            --bg-end: #7c3ac7;
        }

        .blue-card {
            --bg-start: #4481e0;
            --bg-end: #3a7cc7;
        }

        .pink-card {
            --bg-start: #e04481;
            --bg-end: #c73a7c;
        }

        .card-title {
            font-size: 14px;
            margin-bottom: 10px;
            opacity: 0.9;
        }

        .card-amount {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .card-number {
            font-size: 14px;
            opacity: 0.8;
        }

        .add-wallet-btn {
            display: block;
            width: 200px;
            margin: 30px auto;
            padding: 15px;
            background-color: #393653;
            color: white;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            font-size: 16px;
            text-align: center;
        }

        .wallet-activity {
            background: white;
            border-radius: 15px;
            padding: 20px;
            margin-top: 30px;
        }

        .activity-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .activity-title {
            font-size: 24px;
            color: #333;
        }

        .activity-subtitle {
            color: #666;
            margin-top: 5px;
        }

        .activity-filters {
            display: flex;
            gap: 10px;
        }

        .filter-btn {
            padding: 8px 20px;
            border-radius: 20px;
            border: none;
            background-color: #f5f6fa;
            color: #666;
            cursor: pointer;
        }

        .filter-btn.active {
            background-color: #393653;
            color: white;
        }

        .transaction-list {
            margin-top: 20px;
        }

        .transaction-item {
            display: flex;
            align-items: center;
            padding: 15px;
            border-bottom: 1px solid #eee;
        }

        .transaction-icon {
            width: 40px;
            height: 40px;
            background-color: #f5f6fa;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
        }

        .transaction-icon.up {
            color: #4CAF50;
        }

        .transaction-icon.down {
            color: #f44336;
        }

        .transaction-details {
            flex: 1;
        }

        .transaction-type {
            font-weight: bold;
            color: #333;
        }

        .transaction-time {
            color: #666;
            font-size: 14px;
        }

        .transaction-amount {
            font-weight: bold;
        }

        .transaction-status {
            margin-left: 20px;
            font-size: 14px;
        }

        .status-pending {
            color: #888;
        }

        .status-completed {
            color: #4CAF50;
        }

        .status-canceled {
            color: #f44336;
        }
    </style>
  <div class="wallet-container">
    <div class="cards-container">
        <div class="card purple-card">
            <div class="card-title">Main Wallet</div>
            <div class="card-amount">₹<%= wallet ? wallet.balance.toFixed(2) : '0.00' %></div>
            <div class="card-number">444 221 224 ***</div>
        </div>
       
        <div class="card pink-card">
            <div class="card-title">Total Spend</div>
            <div class="card-amount">
                <%= wallet ? wallet.transactions.reduce((total, txn) => {
                    if (txn.transactionType === 'debit') {
                        return total + txn.amount;
                    }
                    return total;
                }, 0).toFixed(2) : '0.00' %>
            </div>
            <div class="card-number">444 221 224 ***</div>
        </div>
    </div>


    <div class="wallet-activity">
        <div class="activity-header">
            <div>
                <h2 class="activity-title">Wallet Activity</h2>
                <p class="activity-subtitle">Recent transactions</p>
            </div>
            <div class="activity-filters">
                <button class="filter-btn active">Today</button>
            </div>
        </div>
<style>
    .transaction-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
}

.transaction-icon {
    font-size: 24px;
    margin-right: 10px;
}

.transaction-details {
    flex-grow: 1;
}

.transaction-type {
    font-weight: bold;
    margin-bottom: 5px;
}

.transaction-date {
    color: #666;
    font-size: 14px;
}

.transaction-note {
    color: #999;
    font-size: 13px;
    margin-top: 5px;
}

.transaction-amount {
    font-size: 16px;
    font-weight: bold;
    margin-left: 20px;
}

.transaction-balance {
    font-size: 14px;
    color: #333;
    margin-left: 20px;
}

.transaction-status {
    font-size: 14px;
    margin-left: 20px;
}

</style>
        <div class="transaction-list">
            <% if (wallet && wallet.transactions.length > 0) { %>
                <% wallet.transactions.forEach(txn => { %>
                    <div class="transaction-item">
                        <div class="transaction-icon <%= txn.transactionType === 'credit' ? 'up' : 'down' %>">
                            <%= txn.transactionType === 'credit' ? '↑' : '↓' %>
                        </div>
                        <div class="transaction-details">
                            <div class="transaction-type"><%= txn.transactionType.charAt(0).toUpperCase() + txn.transactionType.slice(1) %></div>
                            <div class="transaction-date"><%= new Date(txn.date).toLocaleString() %></div>
                            <% if (txn.transactionType === 'credit' && txn.message) { %>
                                <div class="transaction-note">Note: <%= txn.message %></div>
                            <% } %>
                        </div>
                        <div class="transaction-amount"><%= txn.transactionType === 'credit' ? '+' : '-' %>₹<%= Math.abs(txn.amount).toFixed(2) %></div>
                        
                        <div class="transaction-status <%= txn.transactionType === 'credit' ? 'status-completed' : 'status-pending' %>">
                            <%= txn.transactionType === 'credit' ? 'Completed' : 'Pending' %>
                        </div>
                    </div>
                    
                <% }) %>
            <% } else { %>
                <div>No transactions found.</div>
            <% } %>
        </div>
    </div>
</div>

    
	<script>
		document.getElementById('sort').addEventListener('change', function() {
    const selectedSort = this.value;
    fetch(`/products?sort=${selectedSort}`)
        .then(response => response.text())
        .then(html => {
            document.querySelector('.isotope-grid').innerHTML = new DOMParser().parseFromString(html, 'text/html').querySelector('.isotope-grid').innerHTML;
        })
        .catch(error => console.error('Error fetching sorted products:', error));
});

document.getElementById('filter-form').addEventListener('submit', function(event) {
    event.preventDefault(); // Prevent form from refreshing the page
    const sort = document.getElementById('sort').value;
    const category = document.getElementById('category').value;

    // Redirect with query parameters for sorting and category filtering
    window.location.href = `/products?sort=${sort}&category=${category}`;
});
	</script>

